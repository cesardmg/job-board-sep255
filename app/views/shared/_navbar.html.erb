<!-- ====== Navbar Section Start -->
<header class="flex items-center w-full bg-white shadow-md">
  <div class="container mx-auto">
    <div class="relative flex items-center justify-between px-4 py-4">
      <div class="w-60">
        <%= link_to root_path, class: "block w-full" do %>
          <%= image_tag "https://cdn.tailgrids.com/2.0/image/assets/images/logo/logo-primary.svg", alt: "logo", class: "h-10" %>
        <% end %>
      </div>
      
      <!-- Hamburger menu button for mobile -->
      <button class="z-50 md:hidden" id="navbar-toggle">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
      
      <!-- Navigation and buttons -->
      <div class="fixed inset-y-0 right-0 items-center justify-between w-full transition duration-300 ease-in-out transform translate-x-full bg-white md:w-auto md:bg-transparent md:translate-x-0 md:relative md:flex" id="navbar-menu">
        <nav class="flex flex-col justify-center h-full">
          <ul class="flex flex-col items-center md:flex-row">
            <li class="my-4 md:my-0">
              <%= link_to "Jobs", jobs_path, class: "block px-4 py-2 text-xl md:text-base font-medium text-gray-700 hover:text-gray-900" %>
            </li>
          </ul>
        </nav>
        <div class="flex flex-col items-center mt-4 md:flex-row md:ml-6 md:mt-0">
          <% if user_signed_in? %>
            <%= link_to "Dashboard", "#", class: "block px-4 py-2 my-2 md:my-0 text-xl md:text-base font-medium text-gray-700 hover:text-gray-900" %>
            <%= link_to "Profile", edit_user_registration_path, class: "block px-4 py-2 my-2 md:my-0 text-xl md:text-base font-medium text-gray-700 hover:text-gray-900" %>
            <%= link_to new_job_path, class: "flex items-center justify-center w-10 h-10 my-2 md:my-0 mx-2 text-white bg-blue-600 rounded-full hover:bg-blue-700 transition-colors duration-300" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
            <% end %>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "block px-4 py-2 my-2 md:my-0 text-xl md:text-base font-medium text-white bg-red-600 rounded hover:bg-red-700" %>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: "block px-4 py-2 my-2 md:my-0 text-xl md:text-base font-medium text-gray-700 hover:text-gray-900" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "block px-4 py-2 my-2 md:my-0 text-xl md:text-base font-medium text-white bg-blue-600 rounded hover:bg-blue-700" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- ====== Navbar Section End -->

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const navbarToggle = document.getElementById('navbar-toggle');
    const navbarMenu = document.getElementById('navbar-menu');

    navbarToggle.addEventListener('click', function() {
      navbarMenu.classList.toggle('translate-x-full');
    });
  });
</script>
