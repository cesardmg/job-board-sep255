<!-- ====== Navbar Section Start -->
<header class="flex items-center w-full bg-white shadow-md">
  <div class="container mx-auto">
    <div class="relative flex items-center justify-between px-4 py-4">
      <div class="w-60">
        <%= link_to "#", class: "block w-full" do %>
          <%= image_tag "https://cdn.tailgrids.com/2.0/image/assets/images/logo/logo-primary.svg", alt: "logo", class: "h-10" %>
        <% end %>
      </div>
      
      <!-- Hamburger menu button for mobile -->
      <button class="md:hidden" id="navbar-toggle">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
      
      <!-- Navigation and buttons -->
      <div class="items-center justify-between hidden md:flex" id="navbar-menu">
        <nav>
          <ul class="flex flex-col md:flex-row">
            <li>
              <%= link_to "Home", "#", class: "block px-4 py-2 text-base font-medium text-gray-700 hover:text-gray-900" %>
            </li>
            <li>
              <%= link_to "Jobs", jobs_path, class: "block px-4 py-2 text-base font-medium text-gray-700 hover:text-gray-900" %>
            </li>
            <li>
              <%= link_to "About", "#", class: "block px-4 py-2 text-base font-medium text-gray-700 hover:text-gray-900" %>
            </li>
          </ul>
        </nav>
        <div class="flex flex-col mt-4 md:flex-row md:ml-6 md:mt-0">
          <%= link_to "Login", "#", class: "block px-4 py-2 text-base font-medium text-gray-700 hover:text-gray-900" %>
          <%= link_to "Sign Up", "#", class: "block px-4 py-2 mt-2 md:mt-0 text-base font-medium text-white bg-blue-600 rounded hover:bg-blue-700" %>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- ====== Navbar Section End -->

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const navbarToggle = document.getElementById('navbar-toggle');
    const navbarMenu = document.getElementById('navbar-menu');

    navbarToggle.addEventListener('click', function() {
      navbarMenu.classList.toggle('hidden');
    });
  });
</script>
