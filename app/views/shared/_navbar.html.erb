<!-- ====== Navbar Section Start -->
<header class="flex items-center w-full bg-white shadow-md">
  <div class="container mx-auto">
    <div class="relative flex items-center justify-between py-4">
      <div class="max-w-full px-4 w-60">
        <%= link_to "#", class: "block w-full" do %>
          <%= image_tag "https://cdn.tailgrids.com/2.0/image/assets/images/logo/logo-primary.svg", alt: "logo", class: "h-10" %>
        <% end %>
      </div>
      <div class="flex items-center justify-between">
        <nav>
          <ul class="flex">
            <li>
              <%= link_to "Home", "#", class: "px-4 py-2 text-base font-medium text-gray-700 hover:text-gray-900" %>
            </li>
            <li>
              <%= link_to "Jobs", jobs_path, class: "px-4 py-2 text-base font-medium text-gray-700 hover:text-gray-900" %>
            </li>
            <li>
              <%= link_to "About", "#", class: "px-4 py-2 text-base font-medium text-gray-700 hover:text-gray-900" %>
            </li>
          </ul>
        </nav>
        <div class="flex ml-6">
          <%= link_to "Login", "#", class: "px-4 py-2 text-base font-medium text-gray-700 hover:text-gray-900" %>
          <%= link_to "Sign Up", "#", class: "px-4 py-2 text-base font-medium text-white bg-blue-600 rounded hover:bg-blue-700" %>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- ====== Navbar Section End -->
