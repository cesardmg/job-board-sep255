<% content_for :navbar do %>
  <%= render 'shared/navbar' %>
<% end %>

<h1 class="mb-4 text-3xl font-bold">Latest Jobs</h1>
<% @jobs.each do |job| %>
  <div class="p-4 mb-4 bg-white rounded shadow-md">
    <h2 class="text-xl font-semibold">
      <%= link_to job.title, job_path(job), class: 'text-blue-500 hover:underline' %>
    </h2>
    <p class="text-gray-700"><%= job.company %> - <%= job.location %></p>
  </div>
<% end %>
