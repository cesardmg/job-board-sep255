<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
    <div class="px-4 py-3 mb-4 text-red-700 bg-red-100 border border-red-400 rounded">
      <strong class="font-bold"><%= pluralize(job.errors.count, "error") %>:</strong>
      <ul>
        <% job.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: 'block text-gray-700' %>
    <%= form.text_field :title, class: 'w-full px-3 py-2 border rounded' %>
  </div>

  <div class="mb-4">
    <%= form.label :company, class: 'block text-gray-700' %>
    <%= form.text_field :company, class: 'w-full px-3 py-2 border rounded' %>
  </div>

  <div class="mb-4">
    <%= form.label :location, class: 'block text-gray-700' %>
    <%= form.text_field :location, class: 'w-full px-3 py-2 border rounded' %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: 'block text-gray-700' %>
    <%= form.text_area :description, class: 'w-full px-3 py-2 border rounded', rows: 6 %>
  </div>

  <%= form.submit class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
<% end %>
