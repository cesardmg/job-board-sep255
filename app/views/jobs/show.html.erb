<% content_for :navbar do %>
  <%= render 'shared/navbar' %>
<% end %>

<h1 class="mb-4 text-2xl font-bold"><%= @job.title %></h1>
<p class="mb-2 text-xl"><%= @job.company %> - <%= @job.location %></p>
<div class="prose">
  <%= simple_format(@job.description) %>
</div>
<div class="mt-6">
  <%= link_to 'Edit', edit_job_path(@job), class: 'bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  <%= link_to 'Back', jobs_path, class: 'bg-gray-700 hover:bg-gray-900 text-white font-bold py-2 px-4 rounded' %>
</div>
