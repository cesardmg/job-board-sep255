<h1 class="mb-4 text-3xl font-bold"><%= @job.title %></h1>
<p class="mb-2 text-xl"><%= @job.company %> - <%= @job.location %></p>
<div class="prose">
  <%= simple_format(@job.description) %>
</div>
<div class="mt-6">
  <%= link_to 'Edit', edit_job_path(@job), class: 'bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded' %>
  <%= link_to 'Back', jobs_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
</div>
